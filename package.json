{
	"name": "@wasm-fmt/shfmt",
	"description": "A wasm based shell script formatter",
	"author": "magic-akari <akari.ccino@gmail.com>",
	"version": "0.2.4",
	"license": "MIT",
	"keywords": [
		"wasm",
		"shell",
		"formatter",
		"shfmt",
		"bash"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/wasm-fmt/shfmt"
	},
	"homepage": "https://github.com/wasm-fmt/shfmt",
	"bugs": {
		"url": "https://github.com/wasm-fmt/shfmt/issues"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./shfmt.d.ts",
			"webpack": "./shfmt.js",
			"deno": "./shfmt.js",
			"bun": "./shfmt_node.js",
			"module-sync": "./shfmt_node.js",
			"node": "./shfmt_node.js",
			"default": "./shfmt_esm.js"
		},
		"./esm": {
			"types": "./shfmt.d.ts",
			"default": "./shfmt_esm.js"
		},
		"./node": {
			"types": "./shfmt.d.ts",
			"default": "./shfmt_node.js"
		},
		"./bundler": {
			"types": "./shfmt.d.ts",
			"default": "./shfmt.js"
		},
		"./web": {
			"types": "./shfmt_web.d.ts",
			"default": "./shfmt_web.js"
		},
		"./vite": {
			"types": "./shfmt_web.d.ts",
			"default": "./shfmt_vite.js"
		},
		"./wasm": "./shfmt.wasm",
		"./package.json": "./package.json",
		"./*": "./*"
	},
	"scripts": {
		"build": "tinygo build -o=shfmt.wasm -target=wasm-unknown -no-debug ./src/lib.go",
		"fmt": "dprint fmt",
		"test:go": "go test -C src -v",
		"test:node": "node --test test_node/shfmt.test.js",
		"test:deno": "deno test test_deno --allow-read",
		"test:bun": "bun test test_bun",
		"version": "node ./scripts/sync_version.js && git add ."
	},
	"engines": {
		"node": ">=16.17.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
